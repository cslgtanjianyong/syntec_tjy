<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <TextView
        android:id="@+id/lb_PassWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lb_UserName"
        android:layout_below="@+id/lb_UserName"
        android:layout_marginTop="38dp"
        android:text="密     码：" />

    <TextView
        android:id="@+id/lb_UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="130dp"
        android:text="用户名：" />

    <EditText
        android:id="@+id/text_PassWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lb_PassWord"
        android:layout_alignBottom="@+id/lb_PassWord"
        android:layout_toRightOf="@+id/lb_PassWord"
        android:ems="10"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/text_UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lb_UserName"
        android:layout_alignBottom="@+id/lb_UserName"
        android:layout_alignLeft="@+id/text_PassWord"
        android:ems="10" />

    <Button
        android:id="@+id/bton_Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bton_Login"
        android:layout_alignBottom="@+id/bton_Login"
        android:layout_alignRight="@+id/text_PassWord"
        android:text="取消" />

    <Button
        android:id="@+id/bton_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/lb_UserName"
        android:layout_below="@+id/text_PassWord"
        android:layout_marginTop="28dp"
        android:text="登录" />

</RelativeLayout>
